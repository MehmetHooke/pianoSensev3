<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Seçili durumdaki arka plan -->
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/nav_selected" /> <!-- Seçili arka plan rengi -->
            <corners android:radius="50dp" /> <!-- Oval görünüm için radius -->
        </shape>
    </item>

    <!-- Seçili olmayan durumdaki arka plan -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Şeffaf arka plan -->
        </shape>
    </item>
</selector>