<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/senseLoginlogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="9dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="17dp"
            android:background="@drawable/ic_adventure" />

        <TextView
            android:id="@+id/welcomeText2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="49dp"
            android:layout_marginTop="200dp"
            android:layout_marginEnd="47dp"
            android:text="Reset password"
            android:textAlignment="center"
            android:textColor="@color/black"

            android:textSize="38sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/subtitleText2"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/emailField"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="-50dp"
            android:text="Please confirm your E-mail adress"
            android:textAlignment="center"
            android:textSize="16sp" />

        <Button
            android:id="@+id/changePasswordButton"
            android:layout_width="224dp"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:layout_below="@+id/emailField"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="100dp"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="87dp"
            android:background="@drawable/rounded_button"
            android:backgroundTint="@color/btncolor"
            android:text="Change Password"
            android:textColor="@color/white"
            android:textSize="16dp"
            />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="33dp"
            android:layout_height="36dp"
            android:layout_alignEnd="@+id/emailField"
            android:layout_alignBottom="@id/emailField"
            android:layout_marginStart="-43dp"
            android:layout_marginEnd="9dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/mail" />

        <EditText
            android:id="@+id/emailField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/senseLoginlogo"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="23dp"
            android:layout_marginTop="84dp"
            android:layout_marginEnd="17dp"
            android:background="@drawable/rounded_login"
            android:ems="10"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:paddingStart="10dp"
            android:paddingEnd="10dp" />

    </RelativeLayout>
</FrameLayout>